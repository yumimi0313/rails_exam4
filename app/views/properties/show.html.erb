<p>物件名: <%= @property.name %></p>
<p>賃料: <%= @property.rent %>円</p>
<p>住所: <%= @property.address %></p>
<p>築年数 <%= @property.age %>年</p>
<p>備考<%= @property.remarks %></p>
<hr>

<% n = 0 %>
<% @property.stations.each do |station| %>
  <p><h4>最寄り駅<%= n += 1 %></h4></p>
  <p>路線名　<%= station.line %></p>
  <p>駅名　<%= station.name %></p>
  <p>徒歩分数　<%= station.walking_minutes %>分</p>

<% end %>

